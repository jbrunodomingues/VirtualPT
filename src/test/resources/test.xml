<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="personalTrainerService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.brn.homebrew.service.PersonalTrainerService"/>
    </bean>

    <bean id="tokenService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.brn.homebrew.service.TokenService"/>
    </bean>

    <bean id="userDetailsService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.springframework.security.core.userdetails.UserDetailsService"/>
    </bean>

    <bean id="clientDao" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.brn.homebrew.dao.ClientDao"/>
    </bean>

    <bean id="personalTrainerDao" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.brn.homebrew.dao.PersonalTrainerDao"/>
    </bean>

    <bean id="ptClientAssociationDao" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.brn.homebrew.dao.PtClientAssociationDao"/>
    </bean>

    <bean id="userDao" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.brn.homebrew.dao.UserDao"/>
    </bean>
</beans>